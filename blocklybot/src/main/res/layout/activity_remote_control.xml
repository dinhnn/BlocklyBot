<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shake"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Shake\n"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bounce"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Bounce\n"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wobble_left"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Wobble\nLeft"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/wobble"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Wobble\n"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/wobble_right"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Wobble\nRight"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tap_left"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Tap\nLeft"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tap_feet"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Tap\nFeet"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tap_right"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Tap\nRight"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shake_left"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Shake\nLeft"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/shake_legs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Shake\nLegs"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/shake_right"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Shake\nRight"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_upward_black_24dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="20dp"
                android:src="@drawable/ic_cancel_black_24dp"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_downward_black_24dp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
